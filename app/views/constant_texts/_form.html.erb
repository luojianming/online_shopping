<%= simple_form_for(@constant_text) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs constant_text_input">
    <%= f.input :contact_state %>
    <%= f.input :pay_state %>
    <%= f.input :store_intro %>
    <%= f.input :who_we_are %>
    <%= f.input :how_to_buy %>
    <%= f.input :delivery_area %>
    <%= f.input :privacy_state %>
    <%= f.input :changes_state %>
    <%= f.input :cookies_state %>
    <%= f.input :welcome_state %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
