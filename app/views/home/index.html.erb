<%= render 'home/product_category_sider' %>
<div class="main_container main_container_before_bar_fixed">
  <% if params[:search] == nil %>
  <div id="myCarousel" class="carousel slide">
    <div class="carousel-inner">
      <div class="active item">
        <%= image_tag('carousel-1.jpg') %>
        <div class="carousel-inner">
          <h4>图片的说明</h4>
        </div>
      </div>

      <div class="item">
        <%= image_tag('carousel-2.jpg') %>
        <div class="carousel-inner">
          <h4>图片的说明</h4>
        </div>
      </div>

      <div class="item">
        <%= image_tag('carousel-3.jpg') %>
        <div class="carousel-inner">
          <h4>图片的说明</h4>
        </div>
      </div>

    </div>

    <!-- Carousel nav -->
    <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
    <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
  </div>
  <% end %>
  <div class="products_container">
    <% @products.each do |product| %>
      <%= render 'product_item', :product => product %>
    <% end %>
    <div class="pull-right" style="clear: both">
      <%= will_paginate @products %>
    </div>
  </div>
</div>
<script>
  $('.carousel').carousel({
    interval: 2000
   })
</script>
<script>
  $(function(){
    $("input#search").val("<%= params[:search]%>");
  });
</script>
