<h1>Listing finished orders</h1>

<table class="table table-condensed">
  <thead>
  <tr>
    <th>名字</th>
    <th>地址</th>
    <th>电话</th>
    <th>时间</th>
    <th>金额</th>
    <th></th>
    <th></th>
  </tr>
  </thead>
<% @orders.each do |order| %>
  <tr>
    <td><%= order.name %></td>
    <td><%= order.address %></td>
    <td><%= order.tel %></td>
    <td><%= order.created_at.strftime("%Y-%m-%d %H:%M") %></td>
    <td><%= order.total_price %></td>
    <td><%= link_to '详细', order %></td>
    <td><%= link_to '删除', order, method: :delete, data: { confirm: '确定删除？' } %></td>
  </tr>
<% end %>
</table>

<br/>

