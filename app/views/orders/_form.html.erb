<%= simple_form_for(@order) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, :label => t(".name") %>
    <%= f.input :address, :input_html => {:rows => 4 }, :label => t(".address") %>
    <%= f.input :tel, :label => t(".tel") %>
    <%= f.button :submit, "创建订单" %>
  </div>

<% end %>
