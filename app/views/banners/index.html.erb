<h1><%= t('.banner_list') %></h1>

<h5 class="pull-right"><%= link_to t('.unvisiable_all'), unvisiable_all_path, :method => :get%></h5>
<h5 class="pull-right" style="margin-right: 30px"><%= link_to '创建横幅', new_banner_path %></h5>
<div class="banner_list">
<table>
  <tr>
    <th><%= t('.photo') %></th>
    <th><%= t('.visiable') %></th>
    <th></th>
    <th></th>
  </tr>
<% @banners.each do |banner| %>
  <tr>
    <th><%= image_tag banner.image_url("big")%></th>
    <th><%= banner.visiable %></th>
    <th><%= link_to t('.edit'), edit_banner_path(banner)%></th>
    <th><%= link_to t('.destroy'), banner_path(banner), :method => :delete %></th>
  </tr>
<% end %>
</table>
<div class="pull-right">
  <%= will_paginate @banners %>
</div>
</div>
