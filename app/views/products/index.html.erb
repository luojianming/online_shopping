<%= render 'stylesheet' %>
Download:
<%= link_to "CSV", products_path(format: "csv") %>

<h3 class="pull-right"><%= link_to 'New product', new_product_path %></h3><br/>
<h1><%= link_to 'All products', products_path %></h1>
<%= form_tag({:controller => "products", :action => "filter_by_stock"}, :method => :get) do %>
  <span>less than </span>
  <%= text_field_tag(:threshold) %>
  <%= submit_tag("Go") %>
<% end %>
<table class="table table-condensed">
  <tr>
    <th>Name</th>
    <th>Size</th>
    <th>Price</th>
    <th>Brand</th>
    <th>Discount</th>
    <th>Description</th>
    <th>Stock</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
    <td><%= product.size %></td>
    <td><%= product.price %></td>
    <td><%= product.brand %></td>
    <td><%= product.discount %></td>
    <td><%= product.description %></td>
    <td><%= product.stock %></td>
    <td><%= link_to 'Show', product %></td>
    <td><%= link_to 'Edit', edit_product_path(product) %></td>
    <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />
