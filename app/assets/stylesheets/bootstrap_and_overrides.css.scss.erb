@charset "utf-8";
@import "bootstrap";
body { 
  background-image: url(<%= asset_path 'paper.jpg' %>);
  background-repeat: repeat;
  height: 100%;
  margin: 0;
  padding: 0!important; 
}


body > .wrap{
  height: 100%;
  height: auto !important;
  min-height: 100%;
  margin-bottom: -150px;
}


.push ,.footer{
  height: 150px;
  clear: both;
}

.footer{
  margin-top: 20px;
  border-top: 1px solid #edd;
}
