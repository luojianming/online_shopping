.product_box{
  width:208px;
  height: 380px;
  border: 1px solid #CCC;
  margin-top: 5px;
  margin-right: 7px;
  float: left;
}

.photo{
  margin-bottom: 5px;
}

.photo img{
}

.price{
  margin-bottom: 5px;
}

.price span{
  color: red;
}

.carousel .item img{
  height: 300px;
  width: 870px;
}

.alt {
  background: #eee;
}

.category_list > li > a{
  font-size: 14px;
  line-height: 30px;
  display: block;
  font-weight: bold;
}

.category_list > li > a{
  color: black;
}

.white_font{
  color: #fff!important;
}

.category_list > li > div{
  margin-bottom: 0px;
}
.main_container{
  /*
  background-image: url(<%= asset_path 'paper.jpg' %>)!important;
  background-repeat: repeat;
  */
}
.category_bar{
  background-image: url(<%= asset_path 'paper.jpg' %>);
  background-repeat: repeat;
  width: 220px;
  height: auto;
  margin-left: 120px;
  float: left;
}

.category_bar_fixed{
  top: 0px;
  position: fixed;
}

.main_container{
  width: 870px;
}

.main_container_before_bar_fixed{
  float: left;
  margin-top: -20px;
  margin-left: 18px;
}

.main_container_after_bar_fixed{
  float: left;
  margin-left: 360px;
}
.category_list p{
  margin-bottom: 5px;
}

.category_list{
  list-style-type: none;
}

.title a{
  color: white;
}

.category_list > li > .collapse > p > a{
  color: #000;
  font-size: 12px;
}

.category_bar{
 border-left: 1px solid #ddd; 
 border-right: 1px solid #ddd; 
 border-bottom: 1px solid #ddd; 
}

.category_bar .title{
  background: #A21C1D;
  height: 30px;
  line-height: 30px;
  font-size: 16px;
}
.curr{
  background: #6c5143;
}

.menuIcon{
  position: fixed;
  left: 340px;
  z-index: 1000;
  width: 630px;
  height: auto;
  background: #eee;
  float: left;
}
.sub_category_item a{
  color: #444;
  font-size: 12px;
  text-decoration: none;
  margin-left: 5px;
  margin-top: 5px;
}

.sub_category_item span{
  color: #ccc;
}

.sub_category_item{
  width: 200px;
  float: left;
  margin-right: 2px;
  padding-left:12px;
  padding-right:12px;
  border-bottom: 1px dashed #ccc;
}
.sub_category_item .item_header{
  height: 20px;
  border-bottom: 2px solid #000;
  font-size: 16px;
  font-style: bolder;
  color: #000;
  padding-bottom: 5px;
}
ul{
  margin-left: 0px!important; 
  margin-bottom: 0px !important;
}

.small_font{
  font-size: 13px;
  color: #999;
}
